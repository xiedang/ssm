<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
 
    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="logistics"/>
 
    <dubbo:registry protocol="zookeeper" address="${rmi.registry.url}" client="curator"/>
 
    <!-- 用dubbo协议在21000端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="${rmi.protocol.rmi.port}" />
 	<dubbo:provider version="${rmi.registry.version}" protocol="dubbo"   loadbalance="leastactive" cluster="failfast" timeout="60000" layer="service" accesslog="true"/>
    <dubbo:consumer loadbalance="leastactive" check="false" init="false" layer="service" retries="0"/>
    <!-- 声明需要暴露的服务接口 -->
    <import resource="classpath:dubbo/consumer.xml" /> 
    <import resource="classpath:dubbo/provider.xml" /> 
</beans>